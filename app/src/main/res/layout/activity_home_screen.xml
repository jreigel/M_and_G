<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#550E0C"
    tools:context="com.example.justin.mg.HomeScreen">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Make a transaction"
        android:id="@+id/transactionNav"
        android:background="@drawable/button_border"
        android:layout_marginTop="137dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textAlignment="center"
        android:visibility="visible"
        android:layout_alignParentEnd="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View Purchase History"
        android:id="@+id/purchaseNav"
        android:background="@drawable/button_border"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/transactionNav"
        android:textColor="#000000"
        android:textAlignment="center"
        android:visibility="visible" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View Transaction Offers"
        android:id="@+id/offersNav"
        android:background="@drawable/button_border"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/purchaseNav"
        android:textColor="#000000"
        android:textAlignment="center"
        android:visibility="visible" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Balance: $400"
        android:id="@+id/MandG"
        android:background="@drawable/details_border"
        android:autoText="false"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ASURITE: 123456890"
        android:id="@+id/Asurite"
        android:background="@drawable/details_border"
        android:autoText="false"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_above="@+id/MandG"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="John Doe"
        android:id="@+id/FullName"
        android:background="@drawable/details_border"
        android:autoText="false"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_above="@+id/Asurite"
        android:layout_alignEnd="@+id/Asurite" />

</RelativeLayout>
