<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.justin.mg.MakeTransaction"
    android:background="#550E0C"
    >
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/BusinessInput"
        android:background="#ffffff"
        android:layout_alignTop="@+id/AmountInput"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/AmountInput"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="166dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />



    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/TransactionSubmit"
        android:background="@drawable/button_border"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:allowUndo="true"
        android:textSize="22dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Business"
        android:id="@+id/BusinessText"
        android:background="@drawable/button_border"
        android:textColor="#000000"
        android:capitalize="words"
        android:clickable="false"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:layout_above="@+id/BusinessInput"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Amount"
        android:id="@+id/AmountText"
        android:background="@drawable/button_border"
        android:textColor="#000000"
        android:capitalize="words"
        android:clickable="false"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_alignTop="@+id/BusinessText"
        android:layout_alignStart="@+id/AmountInput"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Balance: $400"
        android:id="@+id/MandG"
        android:background="#787676"
        android:autoText="false"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ASURITE: 123456890"
        android:id="@+id/Asurite"
        android:background="#787676"
        android:autoText="false"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_above="@+id/MandG"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="John Doe"
        android:id="@+id/FullName"
        android:background="#787676"
        android:autoText="false"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_above="@+id/Asurite"
        android:layout_alignEnd="@+id/Asurite" />
</RelativeLayout>
