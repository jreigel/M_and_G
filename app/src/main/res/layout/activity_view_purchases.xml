<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.justin.mg.ViewPurchases"
    android:background="#550E0C"
    android:id="@+id/purchaseLayout"
    android:focusable="true">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Balance: $400"
        android:id="@+id/MandG"
        android:background="#787676"
        android:autoText="false"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ASURITE: 123456890"
        android:id="@+id/Asurite"
        android:background="#787676"
        android:autoText="false"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_above="@+id/MandG"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="John Doe"
        android:id="@+id/FullName"
        android:background="#787676"
        android:autoText="false"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_above="@+id/Asurite"
        android:layout_alignEnd="@+id/Asurite" />

</RelativeLayout>
